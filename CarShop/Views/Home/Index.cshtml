@{
    ViewBag.Title = "Index";
}
<style type="text/css">
    table {
        margin: 10px;
        padding: 10px;
    }

    th {
        padding: 10px;
        border: 1px solid black;
    }

    tr {
        padding: 10px;
        border: 1px solid black;
    }

    td {
        padding: 10px;
        border: 1px solid black;
    }
</style>
<div ng-controller="CarShopController as vm">
    <table>
        <thead>
            <tr>
                <th>
                </th>
                <th>Name</th>
                <th>Year</th>
                <th>Price</th>
                <th>Buy</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="car in vm.cars">
                <td>
                    <img class="thumbnail" src="~/Content/{{ car.Image }}" />
                </td>
                <td>{{ car.Name }}</td>
                <td>{{ car.Year }}</td>
                <td>{{ car.DisplayPrice }}</td>
                <td>
                    <input type="button" value="Buy Now" ng-click="vm.open()" />
                </td>
            </tr>
        </tbody>
    </table>
    <modal-show visible="vm.showCarOrderDialog" on-hide="vm.modalOneHide()" ng-cloak></modal-show>
</div>